<h3> Pronađeni korisnici </h3>


<% if @searched_users.empty? then %>
Nije pronađen nijedan zapis.
<% else %>
    <ul class="list-group">

      <% @searched_users.each do |user| %>
          <li class="list-group-item">
            <div class="row">

              <div class="col-sm-4">
                <span class="glyphicon glyphicon-user"></span>
                <%= link_to user.name, {:controller => "users", :action => :show, :id => user.id} %>
              </div>

              <% if current_user.uloga == 4 %>
                  <div class="col-sm-4">
                    <%= link_to "Dodaj administratora", {:controller => "vlasniks", :action => :add, :user_index => user.id},class:"btn btn-success" %>
                  </div>
              <% end %>

              <% if current_user.uloga == 1 %>
                  <div class="col-sm-4">
                    <%= link_to "Dodaj glazbenog urednika", {:controller => "administrators", :action => :add, :user_index => user.id},class:"btn btn-success" %>
                  </div>
                  <div class="col-sm-4">
                    <%= link_to "Uredi", {:controller => "users", :action => :edit, :id => user.id},class:"btn btn-primary" %>
                  </div>
              <% end %>
            </div>
          </li>
      <% end %>

      <br>

      <%= link_to "Povratak na pretragu", 'search',class:"btn btn-primary" %>
      </ul>

	<% end %>
