<% provide(:title, "Edit user") %>
<h1>
  <h4><span class="label label-default">Uredi podatke</span></h4>
</h1>
<br>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name,"Korisničko ime",class:"label label-default" %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :ime,class:"label label-default" %>
        <%= f.text_field :ime, class: 'form-control' %>

        <%= f.label :prezime,class:"label label-default" %>
        <%= f.text_field :prezime, class: 'form-control' %>

        <%= f.label :email,"E-mail",class:"label label-default" %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password,"Šifra",class:"label label-default" %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Potvrda šifre",class:"label label-default" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <br>
        <%= f.submit "Spremi promjene", class: "btn btn-success" %>
    <% end %>

  </div>
</div>